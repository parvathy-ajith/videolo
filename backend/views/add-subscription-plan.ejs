<% title='Add Subscription Plan' %>
    <!--Main layout-->
    <main style="margin-top: 58px;">
        <div class="container pt-4">
            <div class="row">
                <% if (errors) { %>
                    <div class="col-lg-12 login-errors">
                        <ul>
                            <% Object.values(errors).forEach(err=> { %>
                                <div class="alert alert-danger" role="alert">
                                    <%= err.message %>
                                </div>
                                <% }) %>
                        </ul>
                    </div>
                    <% } %>
            </div>
            <div class="form-wrapper">
                <form class="add-edit" method="post" action="/admin/dashboard/subscription/add">
                    <div class="form-header">
                        <h4 class="title">Add Subscription Plan</h4>
                    </div>
                    <div class="form-body">
                        <div class="form-group">
                            <label>Plan Name</label>
                            <input type="text" name="name" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <textarea name="description" 
                            placeholder="Each new line should begin with #"
                            rows="4" cols="10" class="form-control" required></textarea>
                        </div>
                        <div class="form-group">
                            <label>Price (in &#8377;)</label>
                            <input name="amount" step="0.1" type="number" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Duration (in days)</label>
                            <input name="duration" type="number" class="form-control" required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary my-3">Submit</button>
                </form>
            </div>
        </div>
    </main>