<% title='Report | Movie Views' %>
    <!--Main layout-->
    <main style="margin-top: 58px;">
        <div class="container pt-4">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2><b>Movie Views</b> Report</h2>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover report-table" id="revenue-report-table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Movie Title</th>
                            <th scope="col">View Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var i= 1+Number(page-1)*Number(limit ); movies.forEach((movie)=> { %>
                            <tr>
                                <th scope="row">
                                    <%= i++ %>
                                </th>
                                <td>
                                    <%= movie.title %>
                                </td>
                                <td>
                                    <%= movie.view_count %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <div class="clearfix">
                    <ul class="pagination">
                        <% if (page> 1) { %>
                            <li class="page-item"><a href="/admin/dashboard/report/movie-views?page=1">First</a></li>
                            <li class="page-item"><a
                                    href="/admin/dashboard/report/movie-views?page=<%= Number(page)-1 %>">Previous</a>
                            </li>
                            <% } %>

                            <% for( let index=1; index <=totalPages; index++ ) { %>
                                    <li class="page-item"><a
                                            href="/admin/dashboard/report/movie-views?page=<%= index %>"
                                            class="<%= index === Number(page) ? 'page-link active' : 'page-link' %>">
                                            <%= index %>
                                        </a></li>
                                    <% } %>

                            <% if (page < totalPages) { %>
                                            <li class="page-item"><a
                                                    href="/admin/dashboard/report/movie-views?page=<%= Number(page)+1 %>"
                                                    class="page-link">Next</a></li>
                                            <li class="page-item"><a
                                                    href="/admin/dashboard/report/movie-views?page=<%= totalPages %>">Last</a>
                                            </li>
                            <% } %>

                    </ul>
                </div>
            </div>
        </div>
    </main>
    <script type="text/javascript" src="/javascripts/reports.js"></script>
    <!--Main layout-->