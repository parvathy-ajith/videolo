<% title='Reset Password' %>
    <div class="<%= token === '' ? 'container  mt-5 ' : 'container' %>">
        <div class="row">
            <div class="col-lg-3 col-md-2"></div>
            <div class="col-lg-6 col-md-8 login-box">
                <div class="col-lg-12 login-key">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                </div>
                <div class="col-lg-12 login-title">
                    RESET PASSWORD
                </div>
                <% if (errors) { %>
                    <div class="col-lg-12 login-errors">
                        <ul>
                            <% errors.forEach(err=> { %>
                                <div class="alert alert-danger" role="alert">
                                    <%= err.message %>
                                </div>
                                <% }) %>
                        </ul>
                    </div>
                    <% } %>
                        <% if (message) { %>
                            <div class="col-lg-12 login-errors">
                                <ul>
                                    <div class="alert alert-success" role="alert">
                                        <%= message %>
                                    </div>
                                </ul>
                            </div>
                            <% } %>
                                <div class="col-lg-12 login-form px-5">
                                    <div class="col-lg-12 login-form">
                                        <form method="post"
                                            action="<%= token === '' ? '/admin/dashboard/reset-password' : '/reset-password/'+id+'/'+token %>">
                                            <div class="form-group">
                                                <label class="form-control-label">NEW PASSWORD</label>
                                                <input type="password" name="newPassword" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label">CONFIRM PASSWORD</label>
                                                <input type="password" name="confirmPassword" class="form-control">
                                            </div>

                                            <div
                                                class="<%= token === '' ? 'col-lg-12 login-btm  mt-2 ' : 'col-lg-12 login-btm' %>">
                                                <div class="col-lg-12  login-button">
                                                    <button type="submit" class="btn btn-outline-primary">RESET
                                                        PASSWORD</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
            </div>
        </div>
    </div>