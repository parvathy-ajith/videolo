<% title='Movie Listing' %>
    <!--Main layout-->
    <main style="margin-top: 58px;">
        <div class="container pt-4">
            <div class="form-wrapper">
                <div class="form-header">
                    <h4 class="title">User Details</h4>
                </div>
                <div class="form-body">
                    <div class="row">
                        <div class="col-lg-2">
                            <h5>Name</h5>
                        </div>
                        <div class="col-lg-10">
                            <p class="view-details">
                                <%=user.name%>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2">
                            <h5>Email</h5>
                        </div>
                        <div class="col-lg-10">
                            <p class="view-details">
                                <%=user.email%>
                            </p>
                        </div>
                    </div>
                    <div class="form-subheader">
                        <h4 class="title">Subscriptions</h4>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Subscription Plan</th>
                                        <th scope="col">Activation Date</th>
                                        <th scope="col">Expiry Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% user.subscribed_plans.forEach((plan,index)=> { %>
                                        <tr>
                                            <th scope="row">
                                                <%= index+1 %>
                                            </th>
                                            <td>
                                                <%= plan.subscription_plan.name %>
                                            </td>
                                            <td>
                                                <%= plan.activation_date?(plan.activation_date.toDateString()):'-'  %>
                                            </td>
                                            <td>
                                                <%=plan.activation_date?(plan.expiry_date.toDateString()): '-'  %>
                                            </td>
                                        </tr>
                                        <% }) %>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="form-subheader">
                        <h4 class="title">Watch History</h4>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Movie Name</th>
                                        <th scope="col">Watched Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% user.movies_viewed.forEach((movie,index) => { %>
                                        <tr>
                                            <th scope="row"><%= index+1 %></th>
                                            <td> <%= movie.movie.title  %> </td>
                                            <td>
                                                <%= movie.date_viewed.toDateString() %>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
    </main>